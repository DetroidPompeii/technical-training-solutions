<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TODO: EXPLAIN MENU from MAIN MENU  -->
        <record id="estates" model="website.menu">
            <field name="name">Estates</field>
            <field name="url">/estates</field>
        </record>

        <!-- TODO: EXPLAIN PAGE vs CONTROLLER  -->
        <record id="page_cgv" model="website.page">
            <field name="name">CGV</field>
            <field name="type">qweb</field>
            <field name="url">/cgv</field>
            <field name="website_indexed" eval="False"/>
            <field name="is_published">True</field>
            <field name="key">estate.cgv</field>
            <field name="cache_time">10</field> <!-- TODO EXPLAIN CACHE? -->
            <field name="arch" type="xml">
                <t name="CGV" t-name="estage.page_cgv">
                    <t t-call="website.layout">
                      <div id="wrap m-4">
                        <!-- TODO: EXPLAIN OE STRUCTURE  -->
                        <div class="h1 text-center">Our CGV</div>
                        <div class="oe_structure" id="oe_structure_page_cgv"/>

                        <br/><hr/><br/>
                        <!-- TODO: EXPLAIN QCONTEXT + t-esc/t-set + t-options-->
                        <div class='text-center small text-muted'>
                            Rendered by
                            <span t-esc='user_id.display_name'/>,
                            <t t-set='now' t-value='datetime.datetime.now()'/>
                            <span t-esc='now' t-options="{'widget': 'date'}"/>
                            at <span t-esc='now' t-options="{'widget': 'datetime', 'time_only': True}"/>
                        </div>
                      </div>
                    </t>
                </t>
            </field>
        </record>

    </data>
</odoo>